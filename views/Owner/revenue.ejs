<span style="font-family: verdana, geneva, sans-serif"
  ><!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <title>Admin Dashboard | By Code Info</title>
      <link rel="stylesheet" href="style.css" />
      <!-- Font Awesome Cdn Link -->
      <link rel="stylesheet" href="/stylesheets/userstyle.css" />
      <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-0b12LiiKvOWTUO9oGBaXFsrtS0EGGJRqOk9ksO9WZPiFEwy5GehJ3V1zzfejk5K6aaVJT0rrIya1ZxEjHejj9Q=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
      />
      <style>

form {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}

form#contact {
  max-width: 400px;
  margin: 20px auto;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}


form#contact fieldset {
  border: none;
  padding: 0;
  margin-bottom: 15px;
}


form#contact legend {
  font-size: 1.5em;
  font-weight: bold;
  color: #333;
}


form#contact input[type="date"] {
  width: calc(50% - 5px);
  padding: 10px;
  margin: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
}

form#contact to {
  display: inline-block;
  margin: 0 10px;
  color: #555;
}

form#contact button.btn {
  display: block;
  width: 100%;
  padding: 12px;
  background-color: #101416;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 1.2em;
  transition: background-color 0.3s ease-in-out;
}

form#contact button.btn:hover {
  background-color: #cf7ffd;
}
table {
  width: 100%;
  border-collapse: collapse;
  margin: 20px 0;
}

table thead {
  background-color: #2c373e;
  color: #fff;
}


table th {
  padding: 12px;
  text-align: left;
}

table tbody tr {
  border-bottom: 1px solid #ddd;
}


table td {
  padding: 10px;
}

table tbody tr:nth-child(even) {
  background-color: #f9f9f9;
}


table tbody tr:hover {
  background-color: #e0e0e0;
}

      </style>
    </head>
    <body>
      <header class="header">
        <div class="logo">
          <a href="/">Home</a>
          <div class="search_box"></div>
        </div>

        <div class="header-icons">
          <i class="fas fa-bell"></i>
          <div class="account">
            <img src="./pic/img.jpg" alt="" />
            <h4><%= username %></h4>
            <a style="display: flex" href="/logout">Logout</a>
          </div>
        </div>
      </header>
      <div class="container">
        <nav>
          <div class="side_navbar">
            <span>Main Menu</span>
            <a href="#" class="active">Dashboard</a>
            <a href="/profile">Profile</a>
            <a href="/owner/addproduct">Add Products</a>
            <a href="/owner/location">Locations</a>
            <a href="/owner/revenue">Revenue</a>
          </div>
        </nav>
        <div class="main-body">
          <h2>Dashboard</h2>
          <div class="history_lists">
            <div class="list1">
              <form action="/owner/revenue" method="post" id="contact">
                <fieldset>
                  <legend>Enter date Range</legend>
                  <input
                    type="date"
                    name="start"
                    id="start"
                    placeholder="Enter start date"
                    required
                  />
                  <to> to </to>
                  <input
                    type="date"
                    name="end"
                    id="end"
                    placeholder="Enter end date"
                    required
                  />
                </fieldset>
                <button class="btn">Submit</button>
              </form>
              <div class="row">
                <h4>Products</h4>
              </div>

              <% if (formSubmitted) { %> <% if (revenues.length > 0) { %>
              <table>
                <thead>
                  <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Sales</th>
                    <th>Cost</th>
                    <th>Quantity</th>
                  </tr>
                </thead>
                <tbody>
                  <% revenues.forEach(function(revenue) { %>
                  <tr>
                    <td><%= revenue.id %></td>
                    <td><%= revenue.name %></td>
                    <td><%= revenue.sales %></td>
                    <td><%= revenue.cost %></td>
                    <td><%= revenue.quantity %></td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <% } else { %>
              <p>No data during that time.</p>
              <% } %> <% } %>
            </div>
          </div>
        </div>
      </div>
    </body>
  </html>
</span>
