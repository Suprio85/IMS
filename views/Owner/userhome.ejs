                 label: 'Monthly sales',
                 data: [100, 200, 300],
                 borderColor: 'blue',
                 borderWidth: 2,
                 fill: true,
               }],
             };


            // Get the canvas element
            const canvas = document.getElementById('lineChart');

        //    Create the line chart
            const lineChart = new Chart(canvas, {
              type: 'line',
              data: chartData,
              options: {
                scales: {
                  x: {
                    type: 'category',
                    labels: ['January', 'February', 'March'],
                  },
                  y: {
                    beginAtZero: true,
                  },
                },
              },
            });
          });
      </script>
