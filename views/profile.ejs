
<head>
    <title>profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/shopmanger/profilestyle.css"/>
</head>


<div class="container">
  <div class="main-body">
      <div class="row">
          <div class="col-lg-4">
              <div class="card">
                  <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                          <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                          <div class="mt-3">
                              <h4>Name : <%= employee.first_name %> <%= employee.last_name  %></h4>
                              <p class="text-secondary mb-1">Job Name: <%= employee.job_name  %></p>
                              <p class="text-muted font-size-sm">Description: <%=employee.job_description%></p>
                              <p class="text-muted font-size-sm">Salary: <%=employee.salary%></p>
                              <p class="text-muted font-size-sm">Bank Number: <%=employee.bank_number%></p>
                              <p class="text-muted font-size-sm">Address: <%=employee.street_address%>  <%=employee.city%></p>
                              <p class="text-muted font-size-sm">Experince: <%=employee.experience%> Years</p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-lg-8">
              <div class="card">
                  <div class="card-body">
                    <form action="/profile" method="post">
                      <div class="row mb-3">
                          <div class="col-sm-3">
                              <h6 class="mb-0">Full Name</h6>
                          </div>
                          <div class="col-sm-9 text-secondary">
                            <label for="firstname">First Name</label>
                              <input type="text" class="form-control" name="firstname" value="<%= employee.first_name %>">
                            <label for="lastname">Last Name</label>
                                <input type="text" class="form-control" name="lastname" value="<%= employee.last_name %>" >
                          </div>
                      </div>
                      <div class="row mb-3">
                          <div class="col-sm-3">
                              <h6 class="mb-0">Bank Account Number</h6>
                          </div>
                          <div class="col-sm-9 text-secondary">
                              <input type="number" class="form-control" name="banknumber" value="<%= employee.bank_number%>">
                          </div>
                        </div>
                      <div class="row mb-3">
                          <div class="col-sm-3">
                              <h6 class="mb-0">Address</h6>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-sm-3"></div>
                          <div class="col-sm-9 text-secondary">
                              <input type="submit" class="btn btn-primary px-4" value="Save Changes">
                          </div>
                      </div>
                    </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>