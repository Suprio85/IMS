<span style="font-family: verdana, geneva, sans-serif;"><!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <title>Cashier | Dashboard</title>
      <link rel="stylesheet" href="style.css" />
      <!-- Font Awesome Cdn Link -->
      <link rel='stylesheet' href='/stylesheets/cashier/cashier_dashboard.css' />
      <link rel='stylesheet' href='/stylesheets/cashier/header_style.css' />
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-0b12LiiKvOWTUO9oGBaXFsrtS0EGGJRqOk9ksO9WZPiFEwy5GehJ3V1zzfejk5K6aaVJT0rrIya1ZxEjHejj9Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body>
      <%- include("./headers.ejs") %>
      <div class="container">
        <nav>
          <div class="side_navbar">
            <span>Main Menu</span>
            <a href="/cashier/dashboard" class="active">Dashboard</a>
            <a href="/profile">Profile</a>
            <a href="/cashier/cash_memo">Make Purchase</a>
            <a href="/cashier/search_record">Search Records</a>
            <a href="/cashier/delete-purchase">Delete Purchase</a>
    
          </div>
        </nav>
    
        <div class="main-body">
          <h2>Dashboard</h2>
          <!-- <div class="promo_card">
            <h1>Welcome to EasyPay</h1>
            <span>Lorem ipsum dolor sit amet.</span>
            <button>Learn More</button>
          </div> -->
    
          <div class="history_lists">
            <div class="list1">
              <div class="row">
                <h4>- Top Product This Day:</h4>
                <!-- <a href="#">See all</a> -->
              </div>
              <table>
                <thead>
                  <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Sold Amount</th>
                  </tr>
                </thead>
                    <tbody>
                        <% for (var i = 0; i < products.length && i<5 ;i++) { %>
                         <tr>
                           <td><%= products[i][0] %></td>
                           <td><%= products[i][1] %></td>
                           <td><%= products[i][2] %></td>
                           <td><%= products[i][3] %></td>
                           <td><%= products[i][4] %></td>
                         </tr> <% }%>
                        </tbody>
              </table>
            </div><br><br>
            <h5>Recents</h5>
            <div class="recent-records">
              <table>
                <thead>
                  <tr>
                    <th>Order No</th>
                    <th>Customer Name</th>
                    <th>Customer Email</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Total Cost</th>
                  </tr>
                </thead>
                    <tbody>
                        <% for (var i = 0; i < records.length && i<5 ;i++) { %>
                         <tr>
                           <td><%= records[i][0] %></td>
                           <td><%= records[i][1] %></td>
                           <td><%= records[i][2] %></td>
                           <td><%= records[i][3] %></td>
                           <td><%= records[i][4] %></td>
                           <td><%= records[i][5] %></td>
                         </tr> <% }%>
                        </tbody>
              </table>
              
            </div>
          </div>
        </div>
      </div>
    </body>
    </html>
    </span>